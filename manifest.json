{
  "name": "Twitter and TweetDeck in #280Characters",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Enables #280Characters on Twitter and TweetDeck for everyone.",
  "homepage_url": "https://github.com/quinncomendant/280Characters",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://tweetdeck.twitter.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["tweetdeck.js", "twitter.js"]
}